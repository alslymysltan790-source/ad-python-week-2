import pandas as pd
from sklearn.preprocessing import MinMaxScaler, StandardScaler, RobustScaler
d = pd.read_csv("day17_scaling.csv")
n = d.select_dtypes(include="number")
m = MinMaxScaler()
mm = m.fit_transform(n)
d_mm = pd.DataFrame(mm, columns=n.columns)
s = StandardScaler()
ss = s.fit_transform(n)
d_ss = pd.DataFrame(ss, columns=n.columns)
r = RobustScaler()
rr = r.fit_transform(n)
d_rr = pd.DataFrame(rr, columns=n.columns)
print(n.describe())
print(d_mm.describe())
print("Standard")
print(d_ss.describe())
print("Robust")
print(d_rr.describe())
