import pandas as pd
from sklearn.linear_model import LinearRegression
from sklearn.preprocessing import LabelEncoder
df = pd.read_csv("day16_encoding.csv")
y = df["purchases"]
l = LabelEncoder()
df["city_number"] = l.fit_transform(df["city"])
X1 = df[["city_number"]]
a= LinearRegression()
a.fit(X1, y)
print(a.score(X1, y))
df_ohe = pd.get_dummies(df[["city"]], drop_first=True)
X2 = df_ohe
a = LinearRegression()
a.fit(X2, y)
print( a.score(X2, y))
 
